@model Result<Forum>

@if (Model.Success)
{
    var Forum = Model.Value;



    <div class="d-flex text-white  text-nowrap overflow-hidden text-muted  mt-3 mb-3 p-1">

        <div class="">
            <a class="nav-link navbar-text text-muted text-nowrap overflow-hidden ps-0 pe-0"
               asp-controller="Forums"
               asp-action="Index">
                <i class="bi bi-house-fill text-danger"></i>
                Forums
            </a>

        </div>
        @if (Forum?.ParentForum != null && !Forum.ParentForum.IsRoot)
        {
            <div class="">
                <a class="nav-link navbar-text text-muted text-nowrap overflow-hidden pe-0"
                   asp-controller="Forums"
                   asp-action="ForumDisplay"
                   asp-route-ForumId="@Forum.ParentForumId">
                    <i class="bi bi bi-caret-right-fill text-muted "></i>
                    @Forum.ParentForum.Title
                </a>
            </div>
        }
        @if (!Forum.IsRoot)
        {
            <div class="ps-0 pe-0">
                <a class="nav-link navbar-text text-muted text-nowrap overflow-hidden pe-0"
                   asp-controller="Forums"
                   asp-action="ForumDisplay"
                   asp-route-ForumId="@Forum.ForumId">
                    <i class="bi bi bi-caret-right-fill text-muted "></i>
                    @Forum.Title
                </a>
            </div>
        }
        @if (@Forum.IsClosed)
        {
            <div class="ps-3 pt-2">
                <i class="bi bi-door-closed-fill  text-warning"></i>
            </div>
        }
        @if (@Forum.Deleted)
        {
            <div class="ps-3 pt-2">
                <i class="bi bi-trash-fill  text-danger"></i>
            </div>
        }


    </div>



}
