@page
@model LoginByEmailModel
@{
    ViewData["Title"] = "Log in";
}


<h1>@ViewData["Title"]</h1>
<hr></hr>



<div class="row justify-content-center align-content-center">

    <div class="col-md-6 justify-content-center align-content-center">
        <section>
            <form id="account" method="post" asp-page-handler="ByEmail">

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control"
                           autocomplete="Email" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>

                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control"
                           autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>

                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>



            </form>


        </section>
    </div>

</div>


<br />
<br />
<br />
<br />

<div class="row justify-content-center align-content-center">
    <section>
        <div class="col-md-6 offset-md-3">
            <p>
                <a id="LoginByEmail" asp-area="Identity" asp-page="Login">Login By UserName</a>
            </p>
            <hr />
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </div>
    </section>
</div>




@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}
